# ============================================
# AutoGrader Platform API - Environment Variables
# ============================================

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/autograder_dev?schema=public"

# API Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Authentication
# Generate secure keys: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-256-bit-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration (Queue & Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Bull MQ Configuration
QUEUE_NAME_PREFIX=autograder
CONCURRENT_JOBS=2

# OpenAI API (Required for GPT evaluation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# LangSmith (AI Monitoring - Optional)
# Get your key from: https://smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=autograder-dev

# AWS S3 Configuration (Production only)
AWS_REGION=us-east-1
AWS_S3_BUCKET=autograder-artifacts
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_TTL=60       # Time window in seconds
RATE_LIMIT_MAX=100      # Max requests per time window
